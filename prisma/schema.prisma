generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

enum TenantType {
  CLUB
  BUSINESS
}

model Tenant {
  id             String     @id @default(cuid())
  name           String
  slug           String     @unique
  type           TenantType @default(BUSINESS)
  primaryColor   String     @default("#1a4d2e")
  secondaryColor String     @default("#ffffff")
  logoUrl        String?
  settings       Json?      
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  users          User[]
  members        Member[]
  tables         Table[]
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String?
  role          String    @default("USER")
  tenantId      String
  tenant        Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([tenantId])
}

model Member {
  id        String   @id @default(cuid())
  name      String
  email     String?
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  @@index([tenantId])
}

model Table {
  id        String   @id @default(cuid())
  number    Int
  status    String   @default("available")
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  @@index([tenantId])
}